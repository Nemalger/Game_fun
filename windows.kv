
<Planet>:
    orientation: "vertical"
    size_hint: 0.3, 0.8
    pos_hint: {"center": (root.pos_x, root.pos_y)}

    Image:
        size_hint: 2, 2

        source: f"images/planet_{root.number_of_planet}_256_dark.png"
    Label:
        id: status
        text: root.status
    Label:
        text: "Planet resources:"
        bold: True
    BoxLayout:
        Image:
            source: "images/human_Icon2.png"
        Label:
            id: humans
            text: f"{root.humans}"
    BoxLayout:
        Image:
            source: "images/food_Icon.png"
        Label:
            id: food
            text: f"{root.food}"
    BoxLayout:
        Image:
            source: "images/energy_Icon.png"
        Label:
            id: energy
            text: f"{root.energy}"
    BoxLayout:
        Image:
            source: "images/material_Icon.png"
        Label:
            id: materials
            text: f"{root.materials}"
    BoxLayout:
        Image:
            source: "images/physonium_Icon.png"

        Label:
            id: physonium
            text: f"{root.physonium}"

    Button:
        id: try_to_colonize

        size_hint: 0.3, 0.2
        text: "Try to colonize!"
        background_normal: ''
        background_color: (1, 0.7, 0.2, 1)
        bold: True
        outline_color: (0, 0, 0)
        outline_width: 2
        on_press: root.ButtonClicked()
        on_release: root.TryToColonize(1)




WindowManager:
    MenuWindow:
    GameWindow:
        id: game_window
    SettingsWindow:

<MenuWindow>
    name: "Menu"
    FloatLayout:
        size: root.width, root.height * 0.66
        Label:
            text: "Team ABOBA presented:"
            font_size: 60
            pos_hint: {'center': (0.5, 0.9)}
        Label:
            text: "Star Sector 2.0"
            font_size: 65
            bold: True
            pos_hint: {'center': (0.5, 0.83)}
        Button:
            text: "Play"

            pos_hint: {'x': 0.40, 'y': 0.45}
            size_hint: (0.2, 0.1)
            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Game"
                root.manager.transition.direction = "down"
                app.time = 0

            background_normal: ''
            background_color: (1, 0.3, 0, 1)
            bold: True
            outline_color: (0, 0, 0)
            outline_width: 2

        Button:
            text: "Settings"

            pos_hint: {'x': 0.4, 'y': 0.33}
            size_hint: (0.2, 0.1)
            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Settings"
                root.manager.transition.direction = "left"
            background_normal: ''
            background_color: (1, 0.7, 0.2, 1)
            bold: True
            outline_color: (0, 0, 0)
            outline_width: 2

        Button:
            text: "Leave"
            background_normal: ''
            size_hint: (None, None)
            width: 200
            height: 100
            background_color: (1, 0.7, 0.2, 1)

# -------------------------------------------

<GameWindow>
    name: "Game"
    FloatLayout:
        Planet:
            number_of_planet: 2
            status: "Not Colonized"
            humans: 1
            food: 100
            energy: 1
            materials: 1
            physonium: 1
            pos_x: 0.12
            pos_y: 0.6

        Label:
            id: clock
            text: "Day:"
            pos_hint: {'center': (0.85, 0.35)}

        Button:

            text: "Back"

            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Menu"
                root.manager.transition.direction = "up"

            size_hint: (0.15, 0.1)
            background_normal: ''
            background_color: (1, 0.7, 0.2, 1)
            bold: True
            outline_color: (0, 0, 0)
            outline_width: 2


# ----------------------------------------------
<SettingsWindow>
    name: "Settings"
    slide_main_volume: MainVolume
    slide_music_volume: MusicVolume
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Settings:"
            font_size: 60
            bold: True

        Label:
            text: "Main Volume:"
            font_size: 50
        BoxLayout:
            padding: 50
            Slider:
                min: 0
                max: 100
                step: 5
                orientation: "horizontal"

                on_value: root.ChangeMainVolume(*args)
            Label:
                id: MainVolume
                text: "0"
                font_size: 40

        Label:
            text: "Music Volume:"
            font_size: 50
        BoxLayout:
            spacing: 20
            padding: 50
            Slider:
                min: 0
                max: 100
                step: 5
                orientation: "horizontal"
                value: 0
                on_value: root.ChangeMusicVolume(*args)
            Label:
                id: MusicVolume
                text: "0"
                font_size: 40

        Button:
            text: "Back"
            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Menu"
                root.manager.transition.direction = "right"

            size_hint: (0.15, 0.5)

            background_color: (1, 0.7, 0.2, 1)
            background_normal: ''