<Button>:
    font_size: 32
WindowManager:
    MenuWindow:
    GameWindow:
        id: game_window
    SettingsWindow:

<MenuWindow>
    name: "Menu"
    FloatLayout:
        size: root.width, root.height * 0.66

        Button:
            text: "Play"

            pos_hint: {'x': 0.40, 'y': 0.45}
            size_hint: (0.2, 0.1)
            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Game"
                root.manager.transition.direction = "down"

            background_normal: ''
            background_color: (1, 0.3, 0, 1)
            bold: True
            outline_color: (0, 0, 0)
            outline_width: 2

        Button:
            text: "Settings"

            pos_hint: {'x': 0.4, 'y': 0.33}
            size_hint: (0.2, 0.1)
            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Settings"
                root.manager.transition.direction = "left"
            background_normal: ''
            background_color: (1, 0.7, 0.2, 1)
            bold: True
            outline_color: (0, 0, 0)
            outline_width: 2

        Button:
            text: "Leave"
            background_normal: ''
            size_hint: (None, None)
            width: 200
            height: 100
            background_color: (1, 0.7, 0.2, 1)

