<SettingsWindow>
    name: "Settings"
    slide_main_volume: MainVolume
    slide_music_volume: MusicVolume
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Settings:"
            font_size: 60
            bold: True

        Label:
            text: "Main Volume:"
            font_size: 50
        BoxLayout:
            padding: 50
            Slider:
                min: 0
                max: 100
                step: 5
                orientation: "horizontal"

                on_value: root.ChangeMainVolume(*args)
            Label:
                id: MainVolume
                text: "0"
                font_size: 40

        Label:
            text: "Music Volume:"
            font_size: 50
        BoxLayout:
            spacing: 20
            padding: 50
            Slider:
                min: 0
                max: 100
                step: 5
                orientation: "horizontal"
                value: 0
                on_value: root.ChangeMusicVolume(*args)
            Label:
                id: MusicVolume
                text: "0"
                font_size: 40

        Button:
            text: "Back"
            on_press: root.ButtonClicked()
            on_release:
                app.root.current = "Menu"
                root.manager.transition.direction = "right"

            size_hint: (0.15, 0.5)

            background_color: (1, 0.7, 0.2, 1)
            background_normal: ''